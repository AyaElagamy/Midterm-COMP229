        <div class="form-group">
          <label for="NameTextField">Product Name</label>
          <input
            type="text"
            class="form-control"
            id="NameTextField"
            placeholder="Product name"
            name="name"
            required
          />
        </div>

<!-- A botton type submit will submit the form to models/products.js page to delete the -->
          <button type="submit" class="btn btn-primary">
            <i class="fa fa-trash"></i>Delete
          </button>

