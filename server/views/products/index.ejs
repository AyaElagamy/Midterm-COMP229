<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Prodcut details</h3>
      <!-- ------------------------ -->
      <!-- FIX THE ADD BUTTON BELOW -->
      <!-- ------------------------ -->
      <a href="/products/add" class="btn btn-primary" role="button">
        <i class="fa fa-plus-circle"></i> Add a product</a>
      <br />
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Product id</th>
              <th class="text-center col-2">Product name</th>
              <th class="col-4">Descriptionr</th>
              <th class="text-center col-1">price</th>
              <th class="text-center col-1"></th>
              <th class="text-center col-1"></th>
            </tr>
          </thead>
          <tbody>
            <!-- Template Row -->
            <% for (let count = 0; count < products.length; count++) { %>
            <tr>
              <td><%= products[count].Productid %></td>
              <td class="text-center col-2"><%= products[count].Productname %></td>
              <td class="col-4"><%= products[count].Description %></td>
              <td class="text-center col-1"><%= products[count].Price %></td>
              <td class="text-center col-1">
              
                <!-- ------------------------ -->
                <!-- ADD the EDIT BUTTON HERE -->
                <!-- ------------------------ -->
                <a href="/products/details/<%= products[count]._id %>" class="btn btn-primary" role="button">
                  <i class="fa fa-pencil-alt"></i> Edit</a>
              </td>

              <!-- ------------------------ -->
                  <!-- ADD the DELETE BUTTON HERE -->
                  <!-- ------------------------ -->
              <td class="text-center col-1">
                <a href="/products/delete/<%= products[count]._id %>" class="btn btn-danger">
                  <i class="fas fa-trash-alt"></i> Delete</a>
              </td>
                 
    
                 
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
  

  </main>
  

      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
